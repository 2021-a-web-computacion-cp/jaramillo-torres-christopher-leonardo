<%- include('../comunes/cabecera') %>

<div class="container">
    <h1> Crear usuario</h1>

<% const existeMensaje = typeof datos.mensaje != 'undefined'%>
    <% if(existeMensaje){%>
        <div class="alert alert-success" role="alert">
            <%= datos.mensaje%>
        </div>
    <%}%>

    <form action='/usuario/crear-usuario-formulario' method='post'>
        <div class="mb-3">
            <label for="nombre" class="form-label">
                Nombre
            </label>
            <input placeholder="Ej: Christopher"
                   type="text"
                   name="nombre"
                   class="form-control"
                   id="nombre"
                   aria-describedby="ayudaNombre">
            <div id="ayudaNombre" class="form-text">
                Ingrese el nombre
            </div>
        </div>

        <div class="mb-3">
            <label for="apellido" class="form-label">
                Apellido
            </label>
            <input placeholder="Ej: Jaramillo"
                   type="text"
                   name="apellido"
                   class="form-control"
                   id="apellido"
                   aria-describedby="ayudaApellido">
            <div id="ayudaApellido" class="form-text">
                Ingrese el apellido
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Crear usuario</button>
    </form>
</div>

<%- include('../comunes/footer') %>
